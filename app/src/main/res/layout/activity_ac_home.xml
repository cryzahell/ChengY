<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ox.chengystudio.activity.AcHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--header-->
        <include layout="@layout/ac_home_header" />

        <!--activity launcher-->
        <include layout="@layout/ac_home_activity_launcher" />

        <!--double progress bar-->
        <Button
            android:id="@+id/btn_double_progress_bar"
            style="@style/Style.HomeButton"
            android:text="Double Progress Bar"
            android:textColor="@color/colorFontGray" />

        <!--天刀画画时辰助手-->
        <Button
            android:id="@+id/btn_draw_helper"
            style="@style/Style.HomeButton"
            android:text="天刀画画时辰助手"
            android:textColor="@color/colorFontGray" />

    </LinearLayout>

</ScrollView>
