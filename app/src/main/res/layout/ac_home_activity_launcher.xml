<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_activity_launcher"
        style="@style/Style.HomeButton"
        android:layout_marginTop="10dp"
        android:text="Activity Launcher"
        android:textColor="@color/colorFontGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="是否传入全部参数(未勾选请注意logcat)"
            android:textColor="@color/colorFontGray"
            android:textSize="@dimen/font_size_normal" />

        <CheckBox
            android:id="@+id/cb_launch_param_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View style="@style/Style.Underline.LRMargin15" />

</LinearLayout>